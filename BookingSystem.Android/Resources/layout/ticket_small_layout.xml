<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="84dp">

    <ImageView
        android:id="@+id/img_ticket"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/ic_ticket" />

    <TextView
        android:id="@+id/lb_ticket_no"
        style="@style/BadgeAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/img_ticket"
        android:padding="5dp"
        android:text="#ABCV12"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_ticket_no"
        android:layout_below="@+id/lb_ticket_no"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:text="From:" />

            <TextView
                android:id="@+id/lb_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"

                android:text="Kumasi"
                android:textColor="@color/primary_text" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lb_ticket_no"
            android:layout_below="@+id/lb_ticket_no"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:text="Destination:" />

            <TextView
                android:id="@+id/lb_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Accra"
                android:textColor="@color/primary_text" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/lb_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lb_ticket_no"
        android:layout_marginEnd="11dp"
        android:text="21st December 2015" />

    <ImageView
        android:id="@+id/btn_reservations_info"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_more_vert_black_18dp" />


</RelativeLayout>